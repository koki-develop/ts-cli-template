{
  "name": "ts-cli-template",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "fmt": "biome check --write --unsafe .",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "build": "bun run ./scripts/build.ts",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@types/bun": "1.2.17",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "typescript": "5.8.3"
  }
}
